<h2> Products</h2>
<%= link_to 'New Product', new_seller_product_path, title: 'Add new Product' %>
<br /><br />
<table class='table'>
  <tr>
    <th>Product Type</th>
    <th>SKU</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Action</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.sku %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td>
        <%= link_to 'Edit', edit_seller_product_path(product), title: 'Edit product' %>
        <%= link_to 'View', seller_product_path(product), title: 'View product' %>
        <%= link_to 'Delete', seller_product_path(product), method: :delete, title: 'Delete product', data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
