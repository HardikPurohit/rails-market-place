<%= form_with(model: [:seller, @product], local: true) do |f| %>
  <%= render 'users/shared/error_messages', resource: @product %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :product_type %>
    <%= f.select :product_type_id, @product_types,  { include_blank: 'Select product type'}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :sku %>
    <%= f.text_field :sku, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="row">&nbsp;</div>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
